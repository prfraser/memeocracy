<!DOCTYPE html>
<html>
  <head>
    <title>Memeocracy</title>
    <%= csrf_meta_tags %>
		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	  <nav class="navbar navbar-inverse">
	    <div class="container">
	      <div class="navbar-header">
	        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        </button>
	        <%= link_to 'Home', root_path, :class => 'navbar-brand' %>
	        <%= link_to 'About', pages_about_path, :class => 'navbar-brand' %>
	        <%= link_to 'Contact', pages_contact_path, :class => 'navbar-brand' %>
	      </div>

	      <div id="navbar" class="navbar-collapse collapse">
	        <ul class="nav navbar-nav">
	          <li><%= link_to('', '#') %></li>
	          <li><%= link_to('', '#') %></li>
	          <li><%= link_to('', '#') %></li>
	        </ul>
	        <ul class="nav navbar-nav navbar-right">
						<% if seller_signed_in? %>
	            <li><%= link_to(current_seller.email, edit_seller_registration_path) %></li>
	            <li><%= link_to "Seller Sign out", destroy_seller_session_path, :method => :delete %></li>
		        <% elsif buyer_signed_in? %>
	            <li><%= link_to(current_buyer.email, edit_buyer_registration_path) %></li>
	            <li><%= link_to "Sign out", destroy_buyer_session_path, :method => :delete %></li>
	            <li><%= link_to "Cart", bag_index_path %></li>
	          <% else %>
	            <li><%= link_to('Sign in', new_buyer_session_path) %></li>
	            <li><%= link_to('Sign up', new_buyer_registration_path) %></li>
	          <% end %>
	        </ul>
	      </div><!--/.nav-collapse -->
	    </div><!--/.container-fluid -->
	  </nav>
		<p class="notice"><%= notice %></p>
	  <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
